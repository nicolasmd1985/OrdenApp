<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Remito">




    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/elc_alfa"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ORDEN DE TRABAJO"
            android:id="@+id/remito"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />


    </RelativeLayout>




    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1"
        >



        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5E3EE"
            android:weightSum="1">


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/scrollView2"
                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/scrollView2">

                    <ListView
                        android:id="@android:id/list"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true">


                    </ListView>
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Items Modificados o Instalados"
            android:id="@+id/textView9"
            android:textColor="#0c7a26"
            android:textAlignment="center"
            android:background="#c9e0e5" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout2">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/observaciones"
                android:hint="Observaciones "
                android:textColorHint="?attr/colorControlHighlight"
                android:textColor="@android:color/background_dark"
                android:background="@android:color/background_light"
                android:inputType="textCapSentences"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingLeft="1dp"
                android:paddingEnd="1dp" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="AclaraciÃ³n "
                android:textColorHint="#ceff48"
                android:textColor="@color/colorPrimary"
                android:ems="10"
                android:id="@+id/aclaracion"
                android:inputType="textPersonName" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="E-mail "
                android:textColorHint="#ceff48"
                android:textColor="@color/colorPrimary"
                android:ems="10"
                android:id="@+id/email"/>

            <mahecha.nicolas.elcaaplicacion.DrawingView
                android:id="@+id/drawing"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:background="#FFFFFFFF"

                android:layout_above="@+id/save"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar"
            android:id="@+id/save"

            android:onClick="savere"
            android:textSize="13sp"
            android:textStyle="normal"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</LinearLayout>